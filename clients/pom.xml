<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>no.nav.soknad.arkivering</groupId>
		<artifactId>soknadsarkiverer</artifactId>
		<version>1.1.0</version>
	</parent>

	<artifactId>soknadsarkiverer-clients</artifactId>
	<name>${project.artifactId}</name>
	<description>Clients used by soknadsarkiverer</description>


	<properties>
		<jackson.version>2.13.3</jackson.version>
		<okhttp.version>4.10.0</okhttp.version>

		<openapi-generator-maven-plugin.version>6.0.1</openapi-generator-maven-plugin.version>
		<remote-comparer-maven-plugin.version>1.0.5</remote-comparer-maven-plugin.version>

		<kotlin.version>1.7.10</kotlin.version>
		<java.version>17</java.version>

		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.jetbrains.kotlin</groupId>
			<artifactId>kotlin-stdlib</artifactId>
			<version>${kotlin.version}</version>
		</dependency>

		<dependency>
			<groupId>com.squareup.okhttp3</groupId>
			<artifactId>okhttp</artifactId>
			<version>${okhttp.version}</version>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.module</groupId>
			<artifactId>jackson-module-kotlin</artifactId>
			<version>${jackson.version}</version>
		</dependency>
	</dependencies>


	<build>
		<finalName>${project.artifactId}</finalName>
		<sourceDirectory>target/generated-sources/openapi</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.openapitools</groupId>
				<artifactId>openapi-generator-maven-plugin</artifactId>
				<version>${openapi-generator-maven-plugin.version}</version>
				<executions>
					<execution>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<inputSpec>${project.basedir}/src/main/resources/soknadsfillager-api.yml</inputSpec>
							<generatorName>kotlin</generatorName>
							<apiPackage>no.nav.soknad.arkivering.soknadsfillager.api</apiPackage>
							<modelPackage>no.nav.soknad.arkivering.soknadsfillager.model</modelPackage>
							<configOptions>
								<serializationLibrary>jackson</serializationLibrary>
								<omitGradlePluginVersions>true</omitGradlePluginVersions>
								<groupId>no.nav.soknad.arkivering</groupId>
								<artifactId>soknadsfillager-client</artifactId>
								<packageName>no.nav.soknad.arkivering.soknadsfillager</packageName>
							</configOptions>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>com.github.sjoblomj</groupId>
				<artifactId>remote-comparer-maven-plugin</artifactId>
				<version>${remote-comparer-maven-plugin.version}</version>
				<executions>
					<execution>
						<id>compare OpenAPI specs</id>
						<goals>
							<goal>remote-compare</goal>
						</goals>
						<configuration>
							<localFilePath>src/main/resources/soknadsfillager-api.yml</localFilePath>
							<remoteFileUri>https://raw.githubusercontent.com/navikt/soknadsfillager/main/api/src/main/resources/soknadsfillager-api.yml</remoteFileUri>
							<timeoutMs>20000</timeoutMs>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.jetbrains.kotlin</groupId>
				<artifactId>kotlin-maven-plugin</artifactId>
				<version>${kotlin.version}</version>
				<executions>
					<execution>
						<id>compile</id>
						<phase>compile</phase>
						<goals>
							<goal>compile</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<jvmTarget>${java.version}</jvmTarget>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<repositories>
		<repository>
			<id>central</id>
			<url>https://repo1.maven.org/maven2</url>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>jitpack.io</id>
			<url>https://jitpack.io</url>
		</pluginRepository>
	</pluginRepositories>
</project>
